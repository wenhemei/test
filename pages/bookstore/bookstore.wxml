    </view>
    <view class='title_top'>
      <text class='title'>大家都在搜</text>
      <text class='load_more'>换一换</text>
      <image src='../../images/change.png'></image>
    </view>
    <view class='imgs_box clearfix'>
      <view class='img_row clearfix'>
        <image class='img_col' bindtap="showDetail" src="../../images/book1.jpg"></image>
        <image class='img_col' src="../../images/book2.jpg"></image>
        <image class='img_col' src="../../images/book3.jpg"></image>
        <image class='img_col' src="../../images/book4.jpg"></image>
        <image class='img_col' bindtap="showDetail" src="../../images/book5.jpg"></image>
        <image class='img_col' src="../../images/book6.jpg"></image>
        <image class='img_col' src="../../images/book7.jpg"></image>
        <image class='img_col' src="../../images/book8.jpg"></image>
      </view>
    </view>


    
  </view>
</view>