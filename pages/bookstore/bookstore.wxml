        <image class='img_col' src="../../images/book8.jpg"></image>
      </view>
    </view>

    <view class='title_top'>
      <text class='title'>点击上十万的好书</text>
      <text class='load_more'>换一换</text>
      <image src='../../images/change.png'></image>
    </view>
    <view class='img_box2'>
      <view class='main_book'>
        <image src="../../images/book8.jpg"></image>
        <view class='book_info'>
          <text class='book_title'>回到唐初当道士</text>
