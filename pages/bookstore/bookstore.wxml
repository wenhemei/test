<!--pages/bookstore/bookstore.wxml-->
<view>
  <swiper indicator-dots autoplay circular interval="2000" duration="800">
    <block wx:for="{{imgUrls}}" wx:key="key">
      <swiper-item>
        <image src="{{item}}" class="slide-image" class='swiper_item'/>
      </swiper-item>
    </block>
  </swiper>
  <view class='content_main'>
    <view class='operate_list'>
      <view class='operate_item'>
        <image src='../../images/1.png'></image>
        <text>分类</text>
      </view>
      <view class='operate_item'>
        <image src='../../images/2.png'></image>
        <text>榜单</text>
      </view>
      <view class='operate_item'>
        <image src='../../images/3.png'></image>
        <text>会员</text>
      </view>
      <view class='operate_item'>
        <image src='../../images/4.png'></image>
        <text>完结</text>
      </view>
      <view class='operate_item'>
        <image src='../../images/5.png'></image>
        <text>出版</text>
      </view>
    </view>

    <view class='title_top'>
      <text class='title'>精品汇聚</text>
      <text class='load_more'>换一换</text>
      <image src='../../images/change.png'></image>
    </view>
    <view class='imgs_box clearfix'>
      <view class='img_row clearfix'>
        <image class='img_col' bindtap="showDetail" src="../../images/book1.jpg"></image>
        <image class='img_col' src="../../images/book2.jpg"></image>
        <image class='img_col' src="../../images/book3.jpg"></image>
        <image class='img_col' src="../../images/book4.jpg"></image>
        <image class='img_col' bindtap="showDetail" src="../../images/book5.jpg"></image>
        <image class='img_col' src="../../images/book6.jpg"></image>
        <image class='img_col' src="../../images/book7.jpg"></image>
        <image class='img_col' src="../../images/book8.jpg"></image>
      </view>
    </view>

    <view class='title_top'>
      <text class='title'>最好看的书</text>
      <text class='load_more'>换一换</text>
      <image src='../../images/change.png'></image>
    </view>
    <view class='imgs_box clearfix'>
      <view class='img_row clearfix'>
        <image class='img_col' bindtap="showDetail" src="../../images/book1.jpg"></image>
        <image class='img_col' src="../../images/book2.jpg"></image>
