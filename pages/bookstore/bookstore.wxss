.recommend_info text{
  display: block;
  font-family: 仿宋;
}
.recommend_info text:first-child{
  font-size: 34rpx;
}
.recommend_info text:last-child{
  font-size: 24rpx;
  line-height: 40rpx;
}
.recommend_icon{
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
  text-align: center;
}
.recommend_icon image{
  width: 60rpx;
  height: 60rpx;
  margin-top: 20rpx;
}