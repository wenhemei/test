/* pages/detail/detail.wxss */
.clearfix::after{
  content: "";
  display: table;
  clear: both;
}
.container{
  width:100vw;
  height:100vh;
  overflow: scroll;
}
.img_box{
  padding: 30rpx;
  box-sizing: border-box;
  background: #fff;
  width: 100%;
}
.img_thumbnail{
  float: left;
}
.img{
  width: 200rpx;
  height: 305.6rpx;
}
.img_info{
  float: left;
  margin-left: 40rpx; 
}
.title{
  font-size: 40rpx;
}
.property{
  font-size: 28rpx;
  color: #cf2727bb;
  margin-left: 20rpx;
}
.author,.state,.size,.type{
  font-size: 28rpx;
  margin-right: 20rpx;
}
.row_block{
  background: #fff;
  padding: 0 30rpx;
}
.abstract_box{
  width: 100%;
}
.abstract{
  font-size: 32rpx;
  color: rgb(150, 148, 148);
}
.row_box{
  width: 100%;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}
.row_box:last-child{
  border: 0;
}
.icon{
  width: 34rpx;
  height: 34rpx;
  float: left;
}
.latest{
  font-size: 30rpx;
  margin-left: 30rpx;
  float: left;
}
.latest_chapters{
  font-size: 26rpx;
  color: #aaa;
  float: left;
  margin-left: 50rpx;
}
.right_icon{
  float: right;
}
.interaction_box{
  background: #fff;
  width: 100%;
  box-sizing: border-box;
  margin-top: 20rpx;
  padding: 30rpx;
}
.title_left{
  font-size: 28rpx;
  float: left;
}
.title_right{
  float: right;
  font-size: 28rpx;
  color: #1afa29;
}
.title_icon{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.info_box{
  display: flex;
  justify-content: space-between;
  padding: 30rpx 50rpx 50rpx 50rpx;
  border-bottom: 1rpx solid #eee;
}
.info_item{
  text-align: center;
  border-right: 1rpx solid #eee;
  padding: 0 30rpx;
}
.info_item:last-child{
  border: 0;
}
.info_data,.info_text{
  display: block;
  font-size: 30rpx; 
}
.comment_info{
  width: 100%;
  margin-top: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #eee;
}
.comment_author{
  display: flex;
  align-items: center;
}
.author_portrait{
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
}
.author_name{
  font-size: 28rpx;
  color: #aaa;
  margin-left: 30rpx;
}
.comment_content{
  font-size: 28rpx;
}
.show_all{
  padding: 30rpx 0;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.show_all text{
  height: 32rpx;
}
.recommend{
  margin-top: 20rpx;
  background: #fff;
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
}
.recommend_title{
  font-size: 28rpx;
}

.book_item{
  width: 25%;
  float: left;
}
.book_img{
  width: 150rpx;
  height: 229.2rpx;
  display: block;
  margin-top: 40rpx;
  box-shadow: 1px 2px 2px rgba(0, 0, 0, 0.2); 
}
.book_title,.book_author{
  display: block;
}
.book_title{
  width: 90%;
  font-size: 24rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  margin-top: 10rpx;
}
.book_author{
  font-size: 22rpx;
  color: #aaa;
  margin-top: 10rpx;
}


